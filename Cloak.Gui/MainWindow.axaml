<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="400"
        x:Class="Cloak.Gui.MainWindow"
        Title="Cloak.Gui"
        Background="#1f1f1f">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
        <ListBox Name="Protections" Width="250" SelectionMode="Multiple,Toggle" Margin="0,10"/>
        
        <TextBox Name="InputBox" Watermark="Input File" Width="250" Margin="0,5"/>
        <TextBox Name="OutputBox" Watermark="Output File" Width="250" Margin="0,5"/>
        
        <Button Name="BrowseButton" Background="MediumSeaGreen" Click="BrowseButtonClick" 
                Width="250" HorizontalAlignment="Center" Margin="0,5"
                HorizontalContentAlignment="Center">Browse</Button>
        
        <Button Name="ProtectButton" Background="DarkSlateBlue" Click="ProtectButtonClick" 
                Width="250" HorizontalAlignment="Center" Margin="0,5"
                HorizontalContentAlignment="Center">Protect</Button>
    </StackPanel>
</Window>